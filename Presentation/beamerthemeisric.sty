\definecolor{isric_white} {RGB}{255, 255, 255}

% ---------------------------------
% set colors of elements

\setbeamercolor{title}{fg=isric_yellow}
\setbeamercolor{frametitle}{fg=isric_orange}

\setbeamercolor{section}{fg=isric_ocre}
\setbeamercolor{subsection}{fg=isric_red}
\setbeamercolor{section in toc}{fg=isric_red}%!80!black}
\setbeamercolor{section title}{fg=isric_ocre}%!80!black}

\setbeamercolor{block title}{bg=isric_orange, fg=isric_ocre}
\setbeamercolor{block body}{bg=isric_orange!30!white}        

\setbeamercolor{enumerate}{fg=isric_ocre}
\setbeamercolor{enumerate item}{fg=isric_gray}
\setbeamercolor{enumerate subitem}{fg=isric_ocre}

\setbeamercolor{itemize}{fg=isric_gray}
\setbeamercolor{itemize item}{fg=isric_ocre}
\setbeamercolor{itemize subitem}{fg=isric_ocre}

\setbeamercolor{description item}{fg=isric_orange!80!black}
\setbeamercolor{alerted text}{fg=isric_red}
\setbeamercolor{caption name}{fg=isric_red!80!black}

