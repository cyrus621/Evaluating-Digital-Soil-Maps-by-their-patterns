\definecolor{isric_yellow}{RGB}{251, 190, 94}
\definecolor{isric_orange}{RGB}{227, 136, 55}
\definecolor{isric_red}   {RGB}{218,  83, 57}
\definecolor{isric_ocre}  {RGB}{139,  40, 34}
