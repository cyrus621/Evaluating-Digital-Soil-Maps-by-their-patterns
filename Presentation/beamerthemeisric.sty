% footer styling

\setbeamercolor{color_footer_left}{fg=black!70!white}
\setbeamercolor{color_footer_right}{fg=black!70!white}

\setbeamertemplate{navigation symbols}{}

\defbeamertemplate*{footline}{isric}
{
  \leavevmode%
  \hbox{%
  \begin{beamercolorbox}[wd=.33\paperwidth,ht=2.25ex,dp=1ex]{color_footer_left}%
    \hspace*{4ex} 
  \end{beamercolorbox}%
  \begin{beamercolorbox}[wd=.65\paperwidth,ht=2.25ex,dp=1ex,right]{color_footer_right}%
   \hfill \inserttitle{} \hspace*{0.4ex} \vspace*{2ex}
  \end{beamercolorbox}}%
  \vskip0pt%
}


% ---------------------------------
% title page

\defbeamertemplate*{title page}{customized}[1][]
{
  \vspace{0.05\paperheight}
  \usebeamerfont{title}\textbf{\textcolor{isric_yellow}{\inserttitle}}
  \par
  \vspace{0.015\paperheight}
  \usebeamerfont{subtitle}\textcolor{isric_yellow}{\insertsubtitle}
  \par
  \vspace{0.02\paperheight}
  \normalsize{\textcolor{isric_white}{\insertauthor}}
  \par
  %\vspace{0.01\paperheight}
  \normalsize{\textcolor{isric_white}{\insertdate}}
